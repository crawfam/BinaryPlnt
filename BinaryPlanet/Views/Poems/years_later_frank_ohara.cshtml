@model BinaryPlanet.ViewModels.PoemViewModel

@section Styles {

    <link href="~/Content/css/custom-row-equal-sizeer.css" rel="stylesheet" />
    <link href="~/Content/css/custom-libre-baskerville-style.css" rel="stylesheet" />

    <title>@Model.Name</title>

}
<div class="container">

    <div class="row eq-size poem-space col-md-10">

        <div class="col-md-3">
            &nbsp;
        </div>

        <div class="col-md-6">
            <br />
            <div class="block style-3">
                <div class="block-image">
                    <div class="view">
                        <img src='@Model.FileNameJpg' title="@Model.Name">
                    </div>
                </div>
            </div>

            <div id="poem">

                <h1 class="title">@Model.Name</h1>
                <p>
                    I was only five<br />
                    years old<br />
                    and fifteen<br />
                    miles away<br />
                    when you<br />
                    leaned against<br />
                    the john door<br />
                    at the<br />
                    5 SPOT
                </p>
                <p>
                    so I came<br />
                    to this poem<br />
                    a little<br />
                    too young<br />
                    and a moment<br />
                    too late
                </p>
                <p>
                    to do much<br />
                    for her except<br />
                    to listen<br />
                    eyes closed<br />
                    saying to myself<br />
                    it’s only<br />
                    a song.
                </p>
                <br />
                <p class="publication">
                    First Published in the Ekphrastic Review
                </p>
            </div>
        </div> <!-- .col 6 -->
        @Html.Partial("_PoemNavFooter")
        <br /><br />
    </div> <!-- .row -->
</div>  <!-- .container -->
